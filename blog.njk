---
layout: layouts/blog.njk
title: Badger news
menu:
  links:
    - text: Blog
      href: "/blog"
      class: is-selected
    - text: Updates
      href: "/updates/"
  ctas:
    - text: Try Badger for free
      class: button is-primary
      href: https://app.getbadger.io/
css: 
  - /styles/blog.css
---

<div class="blog">
  <header class="blog-header">
    <div>
      <h1 class="blog-header-title">
        {{ title }}
      </h1>
    </div>
  </header>

  {% for page in search.pages("type=post", "date=desc", 10) %}
  <article class="post">
    <header>
      <h2><a href="{{ page.url }}">{{ page.title }}</a></h2>
      <p>
        By {{ people[page.author].name }} on
        <time datetime="{{ page.date }}">{{ page.date | date("HUMAN_DATE") }}</time>
      </p>
    </header>
    <div class="post-content">
      {{ page.excerpt | md | safe }}
    </div>
  </article>
  {% endfor %}
</div>