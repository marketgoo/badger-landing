---
layout: ./base.njk
css:
  - https://assets.calendly.com/assets/external/widget.css
  - /styles/landing.css
body_class: has-navbar
try_url: "https://app.getbadger.io"
---

{% include "templates/navbar.njk" %}

<!-- Calendly widget script -->
<script src="https://assets.calendly.com/assets/external/widget.js" type="text/javascript" async></script>

<header class="landing-header">
  <h1>{{ header.title | safe }}</h1>

  <div class="landing-header-content">
    <p>{{ header.intro | md | safe}}</p>

    <div class="button-group">
      <a href="{{ try_url }}" class="button is-primary is-responsive">{{ header.cta }}</a>
      <button class="button is-secondary is-responsive" onclick="Calendly.initPopupWidget({url: '{{ header.calendly_url }}'});">{{ header.demo }}</button>
    </div>
  </div>
</header>

{% for block in steps %}
<section id="step-{{ loop.index }}" class="landing-step {{ block.class }}">
  <div class="landing-step-content">
    <h2>{{ block.title | safe }}</h2>
    {{ block.description | md | safe }}
  </div>

  {% if block.img %}
    <img src="{{ block.img }}">
  {% endif %}
</section>
{% endfor %}

<section class="landing-resume">
  {{ resume | md | safe }}
</section>

{% if pricing %}
<section class="landing-pricing">
  <header>
    <h2>{{ pricing.title | md(true) | safe }}</h2>
    {{ pricing.description | md | safe }}
  </header>
  <p class="landing-pricing-footer">
    <a href="{{ try_url }}" class="button is-primary">
      {{ pricing.cta }}
    </a>
  </p>
</section>
{% endif %}

{% set block = demo %}
{% include "templates/blocks/highlight_cta.njk" %}

{% set block = faq %}
{% include "templates/blocks/faq.njk" %}
